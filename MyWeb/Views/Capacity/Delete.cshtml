@model Capacity
@{
    ViewData["Title"] = "Delete Capacity";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confirmation For @Model.Cap</h1>
        </p>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 offset-2">
                    <div class="form-group mt-2">
                        <label class="control-label" asp-for="Cap"></label>
                        <input class="form-control" asp-for="Cap" readonly />
                        <span class="text-danger" asp-validation-for="Cap"></span>
                    </div>

                    <div class="form-group mt-2">
                        <form asp-action="Delete">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <a class="btn btn-outline-success" asp-action="Index">Show All</a>
                                </div>
                                <div>
                                    <input type="hidden" asp-for="Capacity_Id" />
                                    <input type="submit" value="Confirm" class="btn btn-danger" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
