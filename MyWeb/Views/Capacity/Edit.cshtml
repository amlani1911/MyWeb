@model Capacity
@{
    ViewData["Title"] = "Update Capacity";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Capacity</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-2">
                        <label class="control-label" asp-for="Cap"></label>
                        <input class="form-control" asp-for="Cap" />
                        <span class="text-danger" asp-validation-for="Cap"></span>
                    </div>

                    <div class="form-group mt-2">
                        <div class="d-flex justify-content-between">
                            <div>
                                <a class="btn btn-outline-success" asp-action="Index">Show All</a>
                            </div>
                            <div>
                                <input type="hidden" asp-for="Capacity_Id" />
                                <input type="submit" value="Update" class="btn btn-danger" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
