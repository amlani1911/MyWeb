@model Capacity
@{
    ViewData["Title"] = "Viewing a Capacity";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details For @Model.Cap</h1>
        </p>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 offset-2">
                    <div class="form-group mt-2">
                        <label class="control-label" asp-for="Cap"></label>
                        <input class="form-control" asp-for="Cap" readonly />
                        <span class="text-danger" asp-validation-for="Cap"></span>
                    </div>
                        <div class="form-group mt-2">
                        <div class="d-flex justify-content-between">
                            <div>
                                <a class="btn btn-outline-success" asp-action="Index">Show All</a>
                            </div>
                            <div>
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Capacity_Id">Edit</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>