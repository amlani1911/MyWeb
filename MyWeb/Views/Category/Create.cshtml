@model Category
@{
    ViewData["Title"] = "Create a new Category";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Category</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="CategoryImagePreview" />
                    </div>
                    <div class="form-group mt-2">
                        <label class="control-label" asp-for="CategoryImageUrl"></label>
                        <input class="form-control" asp-for="CategoryImageUrl" />
                        <span class="text-danger" asp-validation-for="CategoryImageUrl"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label class="control-label" asp-for="CategoryName"></label>
                        <input class="form-control" asp-for="CategoryName" />
                        <span class="text-danger" asp-validation-for="CategoryName"></span>
                    </div>
    
                    <div class="form-group mt-2">
                        <div class="d-flex justify-content-between">
                            <div>
                                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                            </div>
                            <div>
                                <input type="submit" value="Create" class="btn btn-outline-success" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        
        $(document).ready(function(){
            var output = document.getElementById('CategoryImagePreview');
            output.src = $("#CategoryImageUrl").val();
        })
        $("#CategoryImageUrl").on("change",function(){
            var output = document.getElementById('CategoryImagePreview');
            output.src = $(this).val();
        })
    </script>
}