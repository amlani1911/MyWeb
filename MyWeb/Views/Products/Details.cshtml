@model Products

@{
    ViewData["Title"] = "Product Details";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.ProductName
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImageUrl" width="100%" alt="@Model.Sku_Code">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">Sku_Code: @Model.Sku_Code</p>
                        <p class="card-text">
                            <b>Category: </b>
                            <a asp-controller="Category" asp-action="Details" asp-route-id="@Model.Id">
                                @Model.Category.CategoryName
                            </a>
                        </p>
                        <p class="card-text"><b>Price: </b>@Model.Price</p>
                        <p class="card-text">
                            <b>Capacities: </b>
                            @*<hr />*@
                            <div class="row">
                                @foreach (var capacity in Model.Products_Capacities) 
                                {

                                    <div class="column text-center">
                                        <a asp-controller="Capacity" asp-action="Details" asp-route-id="@capacity.Capacity_Id">@capacity.Capacity.Cap</a>
                                    </div>
                                }
                            </div>
                        </p>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Back to List
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
